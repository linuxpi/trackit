<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <LinearLayout
        android:padding="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="New Text"
    android:id="@+id/textview_active_user"
    android:textSize="20sp"
    />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="-15dp"
        android:layout_marginLeft="25dp"
        android:textSize="10sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/location_group">

    <Button
        android:id="@+id/location_plot"
        android:paddingLeft="2.5dp"
        android:paddingRight="2.5dp"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:background="@drawable/refresh_butt_navi_drawer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Plot on Map"/>
    <TextView

        android:id="@+id/location_string"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="getting location ..."
    android:layout_marginLeft="10dp"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/location_dats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
           />

    </LinearLayout>
    </LinearLayout>