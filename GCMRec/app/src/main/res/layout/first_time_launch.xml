<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blueGreen">

    <RelativeLayout
        android:id="@+id/layout_gcm"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/register_static_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="Register"
        android:textColor="@color/bright_red"
        android:textSize="35sp" />

    <ImageView
        android:id="@+id/clouds_static_view"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/register_static_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:scaleType="centerInside"
        android:src="@drawable/clouds" />

    <TextView
        android:id="@+id/register_info_static_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clouds_static_view"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:text="Register your device with \nGoogle Cloud Messaging Server"
        android:textColor="#FFFFFF"
        android:textSize="19sp" />

    <Button
        android:id="@+id/getRegId"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@color/bright_red"
        android:padding="15dp"
        android:text="Next" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_email"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Register"
            android:textColor="@color/bright_red"
            android:textSize="35sp" />

        <TextView
            android:textColor="@color/bright_red"
            android:text="Name"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/text_view"
            android:textSize="20sp"
            android:id="@+id/text_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/text_view1"
            android:id="@+id/name"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/bright_red"
            android:text="Email"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/name"
            android:textSize="20sp"
            android:id="@+id/text_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/text_view2"
            android:id="@+id/email"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/submit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@color/bright_red"
            android:padding="15dp"
            android:text="Next" />

    </RelativeLayout>

</RelativeLayout>